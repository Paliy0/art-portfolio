---
import Layout from '../layouts/Layout.astro';
interface Props {
  title: string;
  description: string;
  imageUrl: string;
}

const { title, description, imageUrl } = Astro.props;
---
<Layout title={title}>
  <div class="detail-view">
    <div class="image-section">
      <img src={imageUrl} alt={title} />
    </div>
    <div class="text-section">
      <h1>{title}</h1>
      <p>{description}</p>
    </div>
  </div>
</Layout>


<style>
  .detail-view {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 2rem;
    color: white;
  }

  .image-section img {
    width: 100%;
    height: auto;
  }
</style>
